{
  "compilerOptions": {
    "outDir": "./static/dist",
    "rootDir": "./static/assets/js",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": [ "esnext", "dom" ],
    "types": [ "node" ],
    "baseUrl": "./",
  },
  "include": [
    "./static/assets/js/**/*"
  ], 
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "./static/dist",
    "./static/dist/**/*"
  ]
}